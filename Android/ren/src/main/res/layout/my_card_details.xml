    <TextView
        android:id="@+id/my_detail_aboutme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/my_detail_photo"
        android:layout_alignStart="@id/detail_photo"
        android:layout_below="@+id/my_detail_photo"
        android:padding="10dp"
        android:paddingBottom="10dp"
        android:text="@string/about_me_detail"
        android:textColor="@color/colorText"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/detail_aboutme"
        android:layout_alignStart="@id/detail_aboutme"
        android:layout_below="@id/my_detail_aboutme"
        android:layout_marginBottom="100dp">

        <TextView
            android:id="@+id/my_detail_aboutme_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/colorText"
            android:textSize="13sp" />
    </ScrollView>



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ren.CardDetailActivity">

    <ImageView
        android:id="@+id/my_detail_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/my_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/detail_photo"
        android:layout_toRightOf="@+id/my_detail_photo"
        android:padding="2dp"
        android:textColor="@color/colorPrimaryText"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="false" />

    <ImageView
        android:id="@+id/my_detail_gender"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toEndOf="@id/detail_name"
        android:layout_toRightOf="@+id/my_detail_name"
        android:padding="2dp" />

    <TextView
        android:id="@+id/my_detail_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/detail_name"
        android:layout_toEndOf="@+id/detail_photo"
        android:layout_toRightOf="@+id/my_detail_photo"
        android:autoLink="phone"
        android:padding="2dp"
        android:textColor="@color/colorText"
        android:textSize="13sp"
        android:layout_below="@+id/my_detail_name"
        android:layout_alignLeft="@+id/my_detail_name" />

    <TextView
        android:id="@+id/my_detail_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/my_detail_name"
        android:layout_alignStart="@id/detail_name"
        android:layout_below="@+id/my_detail_phone"
        android:layout_toEndOf="@+id/detail_photo"
        android:layout_toRightOf="@+id/my_detail_photo"
        android:autoLink="email"
        android:padding="2dp"
        android:textColor="@color/colorText"
        android:textSize="13sp" />

    <!--<TextView-->
        <!--android:id="@+id/my_detail_website"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignLeft="@+id/my_detail_name"-->
        <!--android:layout_alignStart="@id/detail_name"-->
        <!--android:layout_below="@+id/my_detail_email"-->
        <!--android:layout_toEndOf="@+id/detail_photo"-->
        <!--android:layout_toRightOf="@+id/my_detail_photo"-->
        <!--android:autoLink="web"-->
        <!--android:padding="2dp"-->
        <!--android:textColor="@color/colorText"-->
        <!--android:textSize="13sp" />-->

    <ImageButton
        android:id="@+id/my_detail_facebook"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/my_detail_name"
        android:layout_alignStart="@id/detail_name"
        android:layout_below="@+id/my_detail_email"
        android:layout_margin="3dp"
        android:layout_toEndOf="@+id/detail_photo"
        android:layout_toRightOf="@+id/my_detail_photo"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/facebook_color"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/my_detail_instagram"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/my_detail_email"
        android:layout_margin="3dp"
        android:layout_toEndOf="@+id/detail_facebook"
        android:layout_toRightOf="@+id/my_detail_facebook"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/instagram_color"
        android:visibility="gone" />

    <!--<ImageButton-->
        <!--android:id="@+id/my_detail_wechat"-->
        <!--android:layout_width="45dp"-->
        <!--android:layout_height="45dp"-->
        <!--android:layout_margin="3dp"-->
        <!--android:layout_toEndOf="@+id/my_detail_email"-->
